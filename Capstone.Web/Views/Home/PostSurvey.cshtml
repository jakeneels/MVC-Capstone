@using Capstone.Web.Models.PageModels
@model SurveyPage

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title></title>
</head>
<body>
    <div class="container">
        <form action="@Url.Action("PostSurvey", "Home")" method="post">
            <div class="row border rounded">

                <div class="col-5">
                    <select name="parkCode">
                        @foreach (var item in Model.Parks)
                        {
                            <option value="@item.ParkCode">@item.ParkName</option>
                        }
                    </select>
              

                <br />
                    Email: <input name="EMail" />
                </div>

                <div class="col-5">
                    State:
                    <select name="StateOfResidence">
                        @foreach (var state in Model.States)
                        {
                            <option value="@state.Value">@state.Key</option>
                        }
                    </select>
           

          
                    Activity Level: <select name="PhysicalActivity">
                        <option value="Inactive">Active</option>
                        <option value="Sedentary">Sedentary</option>
                        <option value="Active">Active</option>
                        <option value="Extremely Active">ExtremelyActive</option>
                    </select>
                </div>
                <input style="background-color: #116466; color:white;" class="btn" type="submit" value="Submit" />
            </div>

        </form>
    </div>
</body>
</html>
